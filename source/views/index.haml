!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    %title Light Controller
    %link{href: "assets/stylesheets/application.css", rel: "stylesheet", type: "text/css"}

  %body
    %h1 LightController 0.0.1

    #controls
      #sliders
        %input{ id: "s1", type: "range", orient: "vertical" }
        %input{ id: "s2", type: "range", orient: "vertical" }
        %input{ id: "s3", type: "range", orient: "vertical" }
        %input{ id: "s4", type: "range", orient: "vertical" }
        %input{ id: "s5", type: "range", orient: "vertical" }
        %input{ id: "s6", type: "range", orient: "vertical" }
        %input{ id: "s7", type: "range", orient: "vertical" }
        %input{ id: "s8", type: "range", orient: "vertical" }
        %input{ id: "s9", type: "range", orient: "vertical" }
        %input{ id: "s10", type: "range", orient: "vertical" }
        %input{ id: "s11", type: "range", orient: "vertical" }
        %input{ id: "s12", type: "range", orient: "vertical" }

      #btns
        %input{ id: "all_on", type: "button", value: "All On" }
        %input{ id: "all_off", type: "button", value: "All Off" }

    #debug

    %script{src: "https://code.jquery.com/jquery-2.1.1.min.js", type: "text/javascript"}
    %script{src: "assets/javascripts/application.js", type: "text/javascript"}
